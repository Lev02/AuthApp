<Button
    x:Class="AuthApp.Client.Windows.Presentation.Resources.Controls.IconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:AuthApp.Core.Enums;assembly=AuthApp.Core"
    xmlns:local="clr-namespace:AuthApp.Client.Windows.Presentation.Resources.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mi="clr-namespace:MaterialDesign.Icons;assembly=MaterialDesign.Icons"
    x:Name="btnMain"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--
<TextBlock
    Grid.Column="0"
    FontFamily="pack://application:,,,/AuthApp.Client.Windows.Presentation;component/Resources/Fonts/MaterialDesignIcons/#Material Symbols Outlined 28pt"
    Text="HELLO " />
        -->

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            FontFamily="{StaticResource AnonymusPro}"
            Text="{Binding Text, FallbackValue='Some button text', RelativeSource={RelativeSource AncestorType={x:Type local:IconButton}}}" />
    </Grid>
</Button>
