<UserControl
    x:Class="AuthApp.Client.Windows.Presentation.MVVM.UserControls.UserInfo.UserInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AuthApp.Client.Windows.Presentation.MVVM.UserControls.UserInfo"
    xmlns:materialIconsWPF="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <materialIconsWPF:MaterialIcon
                Width="{StaticResource Header1_FontSize}"
                Height="{StaticResource Header1_FontSize}"
                Foreground="{StaticResource SecondaryTextBrush}"
                Kind="AccountOffOutline" />

            <TextBlock
                Margin="{StaticResource Top_Big_Margin}"
                HorizontalAlignment="Center"
                Foreground="{StaticResource SecondaryTextBrush}"
                Text="{DynamicResource EmptyUserData}"
                TextAlignment="Center" />

        </StackPanel>

    </Grid>
</UserControl>
