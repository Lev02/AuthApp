<customControls:CustomWindow
    x:Class="AuthApp.Client.Windows.Presentation.MVVM.Windows.Main.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:auth="clr-namespace:AuthApp.Client.Windows.Presentation.MVVM.UserControls.Auth"
    xmlns:customControls="clr-namespace:AuthApp.Client.Windows.Presentation.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AuthApp.Client.Windows.Presentation.MVVM.Windows.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthApp"
    Width="800"
    Height="450"
    Background="{DynamicResource PrimaryBackgroundBrush}"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            Padding="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{DynamicResource LightOverlayBrush}"
            CornerRadius="10">
            <auth:AuthControl />
        </Border>

    </Grid>
</customControls:CustomWindow>
